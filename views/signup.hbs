<div class="container">
  <div class="row col-6 m-auto mt-5 border border-secondary rounded-2">
    {{#if err}}
    <div class="alert alert-danger" role="alert">
      {{err}}
    </div>
    {{/if}}
    <h2 class="text-center p-2 bg-success text-white">Đăng ký</h2>
    <form method="post" action="/api/signup" >
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          value="{{username}}"
          required
        />
      </div>
      <div class="mb-3">
        <label for="pass" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="pass"
          name="pass"
          value="{{pass}}"
          required
        />
      </div>
      <button type="submit" class="btn btn-success col-12 fs-5">Đăng ký</button>
    </form>

    <p class="text-center">Bạn đã có tải khoản?
      <a class="text-warning text-decoration-none fw-semibold" href="/api/login">
        Đăng nhập</a>
    </p>
  </div>
</div>